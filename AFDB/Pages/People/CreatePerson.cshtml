@page
@model AFDB.Pages.People.CreatePersonModel
@{
}

<h1>Asmens sukūrimas</h1>

<form method="post">
    <input type="email" asp-for="Person.Email"/>
    <input type="text" asp-for="Person.Firstname"/>
    <button type="submit" class="btn btn-primary">Išsaugoti</button>
</form>

<div class="container mt-5">
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstname">Vardas</label>
                <input type="text" class="form-control" id="firstname" placeholder="Pranas" required>
            </div>
            <div class="form-group col-md-6">
                <label for="lastname">Pavardė</label>
                <input type="text" class="form-control" id="lastname" placeholder="Dovydatis" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="gender">lytis</label>
                <select class="form-control" id="gender" required>
                    <option value="male">vyr</option>
                    <option value="female">mot</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="birthdate">Gimimo data</label>
                <input type="date" class="form-control" id="birthdate" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="email">El. paštas</label>
                <input type="email" class="form-control" id="email" placeholder="dovydukas1910@ateitis.lt">
            </div>
            <div class="form-group col-md-6">
                <label for="phone">Tel. nr.</label>
                <input type="tel" class="form-control" id="phone" placeholder="+37061910011">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="country">Šalis</label>
                <input type="text" class="form-control" id="country" placeholder="Lietuva">
            </div>
            <div class="form-group col-md-6">
                <label for="description">Aprašymas</label>
                <textarea class="form-control" id="description" rows="3" placeholder="Lietuvos Nepriklausomybės Akto signataras, Ministras pirmininkas, teisininkas, filosofijos mokslų daktaras, profesorius, Lietuvos ateitininkų sąjungos vadovas, enciklopedistas, apie 40 periodinių leidinių redaktorius ir leidėjas."></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="street">Gatvė</label>
                <input type="text" class="form-control" id="street" placeholder="Laisvės al.">
            </div>
            <div class="form-group col-md-4">
                <label for="city">Miestas</label>
                <input type="text" class="form-control" id="city" placeholder="Kaunas">
            </div>
            <div class="form-group col-md-2">
                <label for="house">Namas</label>
                <input type="text" class="form-control" id="house" placeholder="13">
            </div>
            <div class="form-group col-md-2">
                <label for="apartment">Butas</label>
                <input type="text" class="form-control" id="apartment" placeholder="1">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Išsaugoti</button>
    </form>
</div>