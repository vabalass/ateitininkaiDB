@page
@model AFDB.Pages.People.CreatePersonModel
@{
}

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @Html.Raw(ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).FirstOrDefault())
    </div>
}

<h1>Asmens sukūrimas</h1>

<form class="cold-md-12 d-flex flex-wrap needs-validation" method="post">
    <div class="p-2 col-md-4" >
        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Vardas</label>
                <input type="text" class="form-control" maxlength="32" required asp-for="Person.Firstname" />
            </div>        
            <div class="col-md-6">
                <label class="form-label">Pavardė</label>
                <input type="text" class="form-control" maxlength="32" required asp-for="Person.Lastname" />
            </div>
        </div>
        <div>
            <label class="form-label">Lytis</label>
            <select class="form-select" maxlength="4" required asp-for="Person.Gender">
                <option>vyr</option>
                <option>mot</option>
            </select>
        </div>
        <div>
            <label class="form-label">Gimimo data</label>
            <input type="date" class="form-control" value="" required asp-for="Person.Birthdate" />
        </div>
        <div>
            <label class="form-label">El. pašto adresas</label>
            <input type="email" class="form-control" maxlength="50" asp-for="Person.Email" />
        </div>
        <div>
            <label class="form-label">Tel. nr</label>
            <input type="text" class="form-control" maxlength="15" asp-for="Person.Phone" />
        </div>
        <div>
            <label class="form-label">Aprašymas</label>
            <textarea class="form-control" rows="3" maxlength="300" asp-for="Person.Description"></textarea>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Šalis</label>
                <input type="text" class="form-control" maxlength="32" asp-for="Person.Country" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Miestas</label>
                <input type="text" class="form-control" maxlength="20" asp-for="Person.City" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Gatvė</label>
                <input type="text" class="form-control" maxlength="30" asp-for="Person.Street" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Namo nr.</label>
                <input type="text" class="form-control" maxlength="4" asp-for="Person.House" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Buto nr.</label>
                <input type="text" class="form-control" maxlength="4" asp-for="Person.Apartment" />
            </div>
        </div>
    </div>
    <div class="p-2 col-md-4">
        <div>
            <label class="form-label">JAS įžodžio data</label>
            <input type="date" class="form-control" asp-for="Pledges[0].Date" />
        </div>
        <div>
            <label class="form-label">MAS įžodžio data</label>
            <input type="date" class="form-control" asp-for="Pledges[1].Date" />
        </div>
        <div>
            <label class="form-label">SAS įžodžio data</label>
            <input type="date" class="form-control" asp-for="Pledges[2].Date" />
        </div>
        <div>
            <label class="form-label">ASS įžodžio data</label>
            <input type="date" class="form-control" asp-for="Pledges[3].Date" />
        </div>
    </div>
    <div class="col-md-12 p-2">
        <button type="submit" class="btn btn-primary m-2">Išsaugoti</button>
        <a asp-page="/People/People" class="btn btn-danger m-2">Atšaukti</a>
    </div>
</form>